@model List<Widget>

<div class="panel panel-default">
    <div class="panel-heading">
        Overall Rankings
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Rank</th>
                <th>Id</th>
                <th>Text</th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Id</td>
                <td>@Model[i].Text</td>
            </tr>
        }
    </table>
</div>